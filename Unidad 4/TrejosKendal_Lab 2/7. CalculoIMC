Algoritmo CalculoIMC
	definir IMC_BAJO como real;
	IMC_BAJO = 18;
	definir IMC_NORMAL como real;
	IMC_NORMAL = 24.9;
	definir IMC_SOBREPESO como real;
	IMC_SOBREPESO = 26.9;
	definir OBESIDAD como real;
	IMC_OBESIDAD = 27;
	definir peso, estatura, imc como real;
	
	peso = 0;
	estatura = 0; 
	imc = 0;
	
	
	escribir "Por favor indique su peso (Kg)";
	leer peso;
	escribir "Por favor indique su estatura (Metros) ej: 1.8";
	leer estatura;
	
	imc = peso / estatura^2;
	
	si imc < IMC_BAJO entonces 
		escribir "Su índice de masa muscular es: ", imc, " que se clasifica como bajo";
	sino 
		
		si imc <= IMC_NORMAL entonces 
			escribir "Su índice de masa muscular es: ", imc, " que se clasifica como normal";
		sino
			
			si imc <= IMC_SOBREPESO entonces 
				escribir "Su indice de masa musculas es: ", imc, " que se clasifica como sobrepeso"; 
			sino 
				
				si imc >= IMC_OBESIDAD entonces
					escribir "Su indice de masa muscular es: ", imc, " que se clasifica como obesidad";
				sino
				finsi
			finsi
		finsi
	finsi
	
FinAlgoritmo