Algoritmo SumaEnteros
	// Mostrar salida
	Definir operandoUno como Entero;
	Definir operandoDos como Entero;
	Definir resultadoSuma como Entero;
	
	Escribir 'Por favor, digite el primer numero entero';
	Leer operandoUno;
	Escribir 'Por favor, digite el segundo número entero';
	Leer operandoDos;
	
	resultadoSuma <- operandoUno+operandoDos;
	Escribir 'El resultado de la suma es el siguiente: ', resultadoSuma;
